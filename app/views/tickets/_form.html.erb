<%= form_for [@event, @event.tickets.new] do |f| %>
  <p>Price per ticket: $ <%= @event.price %></p>

  <hr>

  <div class="form-group">
    <label>Select tickets</label>
    <%= f.select :amount, [["1", 1], ["2", 2], ["3", 3]], prompt: "Select number of tickets", class: "form-control" %>
  </div>

  <hr>

  <div class="actions">
    <%= f.submit "Reserve your ticket(s)", class: "btn btn-success" %>
  </div>
<% end %>
